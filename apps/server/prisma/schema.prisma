generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id               String             @id @default(uuid())
  email            String?            @unique
  password         String?
  name             String?
  avatarUrl        String?
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  accounts         Account[]
  sessions         Session[]

  // Relations to existing models
  categories       Category[]
  subscriptions    Subscription[]
  filterRules      FilterRule[]
  preference       UserPreference?
  aiApiKeys        AiApiKey[]
  externalServices ExternalService[]

  @@map("users")
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refreshToken      String?
  accessToken       String?
  expiresAt         Int?
  tokenType         String?
  scope             String?
  idToken           String?
  sessionState      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model AiApiKey {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  provider     String
  apiKey       String
  apiEndpoint  String?
  isActive     Boolean  @default(true)
  monthlyLimit Int?
  usedCount    Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([userId, provider])
  @@map("ai_api_keys")
}

model Article {
  id             String        @id @default(cuid())
  subscriptionId String
  title          String
  content        String?
  contentText    String?
  summary        String?
  url            String
  imageUrl       String?
  author         String?
  publishedAt    DateTime?
  fetchedAt      DateTime      @default(now())
  isRead         Boolean       @default(false)
  isStarred      Boolean       @default(false)
  readProgress   Float         @default(0)
  readAt         DateTime?
  isAiProcessed  Boolean       @default(false)
  aiTags         String?
  sentiment      String?
  tags           String?       // 文章标签 (JSON 数组)
  isHighlighted  Boolean       @default(false) // 高亮标记
  isFiltered     Boolean       @default(false) // 是否被过滤规则处理
  filterRuleIds  String?       // 匹配的规则ID列表 (JSON 数组)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  subscription   Subscription  @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  obsidianNote   ObsidianNote?

  @@index([publishedAt])
  @@index([isStarred])
  @@index([isRead])
  @@index([subscriptionId])
  @@index([isHighlighted])
  @@map("articles")
}

model Category {
  id            String         @id @default(cuid())
  userId        String
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  name          String
  description   String?
  color         String?
  icon          String?
  sortOrder     Int            @default(0)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  subscriptions Subscription[]

  @@unique([userId, name])
  @@map("categories")
}

model FilterRule {
  id              String    @id @default(cuid())
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  name            String
  description     String?
  isActive        Boolean   @default(true)
  priority        Int       @default(0)
  fieldType       String    // title, content, author, url
  matchType       String    // contains, notContains, equals, regex, etc.
  pattern         String
  caseSensitive   Boolean   @default(false)
  action          String    // markRead, markStarred, addTag, highlight, pushToInstapaper, pushToNotion, delete
  actionValue     String?   // 标签值或推送配置
  applyToAll      Boolean   @default(true)
  subscriptionIds String?   // JSON 数组
  categoryIds     String?   // JSON 数组，支持分类级别过滤
  matchCount      Int       @default(0) // 匹配次数统计
  lastMatchedAt   DateTime? // 最后匹配时间
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([userId, isActive])
  @@map("filter_rules")
}

model ObsidianNote {
  id           String    @id @default(cuid())
  articleId    String    @unique
  notePath     String
  noteTitle    String?
  noteContent  String?
  syncStatus   String    @default("synced")
  lastSyncedAt DateTime?
  syncError    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  article      Article   @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@map("obsidian_notes")
}

model Subscription {
  id              String    @id @default(cuid())
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  categoryId      String?
  title           String
  description     String?
  feedUrl         String
  siteUrl         String?
  imageUrl        String?
  isActive        Boolean   @default(true)
  lastFetched     DateTime?
  fetchError      String?
  errorCode       String?
  refreshInterval Int?
  showImages      Boolean   @default(true)
  fullTextExtract Boolean   @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  articles        Article[]
  category        Category? @relation(fields: [categoryId], references: [id])

  @@unique([userId, feedUrl])
  @@map("subscriptions")
}

model UserPreference {
  id                  String   @id @default(cuid())
  userId              String   @unique
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  theme               String   @default("system")
  fontSize            String   @default("medium")
  language            String   @default("zh-CN")
  defaultView         String   @default("unread")
  articleListStyle    String   @default("list")
  autoMarkRead        Boolean  @default(true)
  scrollMode          String   @default("infinite")
  enableNotifications Boolean  @default(false)
  notificationSound   Boolean  @default(true)
  autoSync            Boolean  @default(true)
  syncInterval        Int      @default(30)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@map("user_preferences")
}

model ExternalService {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  serviceType  String   // instapaper, notion, pocket
  name         String
  config       String   // JSON 加密存储的配置
  isActive     Boolean  @default(true)
  lastUsedAt   DateTime?
  usedCount    Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([userId, serviceType])
  @@map("external_services")
}
