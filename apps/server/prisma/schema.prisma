generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ai_api_keys {
  id           String   @id
  userId       String
  provider     String
  apiKey       String
  apiEndpoint  String?
  isActive     Boolean  @default(true)
  monthlyLimit Int?
  usedCount    Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime

  @@unique([userId, provider])
}

model articles {
  id             String          @id
  subscriptionId String
  title          String
  content        String?
  contentText    String?
  summary        String?
  url            String
  imageUrl       String?
  author         String?
  publishedAt    DateTime?
  fetchedAt      DateTime        @default(now())
  isRead         Boolean         @default(false)
  isStarred      Boolean         @default(false)
  readProgress   Float           @default(0)
  readAt         DateTime?
  isAiProcessed  Boolean         @default(false)
  aiTags         String?
  sentiment      String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime
  subscriptions  subscriptions   @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  obsidian_notes obsidian_notes?

  @@index([publishedAt])
  @@index([isStarred])
  @@index([isRead])
  @@index([subscriptionId])
}

model categories {
  id            String          @id
  userId        String
  name          String
  description   String?
  color         String?
  icon          String?
  sortOrder     Int             @default(0)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime
  subscriptions subscriptions[]

  @@unique([userId, name])
}

model filter_rules {
  id              String   @id
  userId          String
  name            String
  description     String?
  isActive        Boolean  @default(true)
  priority        Int      @default(0)
  fieldType       String
  matchType       String
  pattern         String
  caseSensitive   Boolean  @default(false)
  action          String
  actionValue     String?
  applyToAll      Boolean  @default(true)
  subscriptionIds String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime
}

model obsidian_notes {
  id           String    @id
  articleId    String    @unique
  notePath     String
  noteTitle    String?
  noteContent  String?
  syncStatus   String    @default("synced")
  lastSyncedAt DateTime?
  syncError    String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime
  articles     articles  @relation(fields: [articleId], references: [id], onDelete: Cascade)
}

model subscriptions {
  id              String      @id
  userId          String
  categoryId      String?
  title           String
  description     String?
  feedUrl         String
  siteUrl         String?
  imageUrl        String?
  isActive        Boolean     @default(true)
  lastFetched     DateTime?
  fetchError      String?
  errorCode       String?
  refreshInterval Int?
  showImages      Boolean     @default(true)
  fullTextExtract Boolean     @default(false)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime
  articles        articles[]
  categories      categories? @relation(fields: [categoryId], references: [id])

  @@unique([userId, feedUrl])
}

model user_preferences {
  id                  String   @id
  userId              String   @unique
  theme               String   @default("system")
  fontSize            String   @default("medium")
  language            String   @default("zh-CN")
  defaultView         String   @default("unread")
  articleListStyle    String   @default("list")
  autoMarkRead        Boolean  @default(true)
  scrollMode          String   @default("infinite")
  enableNotifications Boolean  @default(false)
  notificationSound   Boolean  @default(true)
  autoSync            Boolean  @default(true)
  syncInterval        Int      @default(30)
  createdAt           DateTime @default(now())
  updatedAt           DateTime
}
